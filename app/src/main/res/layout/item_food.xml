<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.ftech.dev.android_my_food.data.model.Food" />

        <variable
            name="itemPosition"
            type="Integer" />

        <variable
            name="itemListener"
            type="com.ftech.dev.android_my_food.ui.home.FoodAdapter.FoodListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ripple_click_square"
        android:onClick="@{()->itemListener.onItemClick(itemPosition ,item)}"
        android:paddingBottom="10dp">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="96dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/border_right_14_white_fill"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">



            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/cera_pro_medim"
                android:text="@{item.name}"
                android:textColor="@color/black"
                android:textSize="@dimen/item_food_text_size_big"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/username" />

            <TextView
                android:id="@+id/tv_vitamin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/cera_pro_medim"
                android:text="@{item.vitamin}"
                android:textColor="@color/gray"
                android:textSize="@dimen/item_food_text_size_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="@string/username" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/cera_pro_medim"
                android:text="@{item.price}"
                android:textColor="@color/gray"
                android:textSize="@dimen/item_food_text_size_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_ratio"
                app:layout_constraintStart_toEndOf="@id/tv_vitamin"
                tools:text="@string/username" />

            <TextView
                android:id="@+id/tv_ratio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/cera_pro_medim"
                android:text="@{item.ratio}"
                android:textColor="@color/gray"
                android:textSize="@dimen/item_food_text_size_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="@string/username" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_body"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_vitamin" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/ic_price"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_price" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/ic_face"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_ratio" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image"
            image="@{item}"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="10dp"
            tools:src="@drawable/food_image_2" />



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>