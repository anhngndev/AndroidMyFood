<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


    <LinearLayout
        style="@style/AppBottomSheetDialogTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transition"
        android:orientation="vertical"
        android:paddingBottom="50dp">

        <ImageView
            android:id="@+id/ivCancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ripple_click_square_circle"
            android:padding="17dp"
            android:src="@drawable/ic_gray_cancel" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_rating" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cera_pro_bold"
            android:text="@string/store_reviews"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/cera_pro_light"
            android:lineSpacingExtra="6dp"
            android:paddingHorizontal="15dp"
            android:text="@string/rating_des"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>
</layout>