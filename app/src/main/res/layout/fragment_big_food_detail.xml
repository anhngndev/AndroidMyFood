<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.ftech.dev.android_my_food.data.model.BigFood" />

        <variable
            name="itemPosition"
            type="Integer" />

        <variable
            name="listener"
            type="com.ftech.dev.android_my_food.ui.fooddetail.FoodImageAdapter.FoodImageListener" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_marginBottom="-40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:toolbarId="@+id/toolbar">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_food"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    app:layout_collapseMode="parallax"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="pin"
                    android:layout_marginTop="240dp"
                    android:background="@drawable/gradient_black"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="pin"
                    android:layout_marginBottom="260dp"
                    android:background="@drawable/gradient_black_reverse"/>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="pin">

                    <ImageView
                        android:id="@+id/ivBack"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="23dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/ripple_click_square_circle"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_left_arrow"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_40_white_fill"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_40_white_fill">


                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/ripple_click_square"
                    android:fontFamily="@font/cera_pro_medim"
                    android:text="@{item.name}"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Indian Mastery Resto" />


                <RatingBar
                    android:id="@+id/rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="10dp"
                    android:numStars="5"
                    android:rating="@{item.rate}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvName" />

                <LinearLayout
                    android:id="@+id/layout_verified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rating">

                    <ImageView
                        android:id="@+id/imv_verified"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginEnd="3dp"
                        android:scaleType="fitCenter"
                        android:scaleX="1.2"
                        android:src="@drawable/ic_verified" />

                    <TextView

                        android:id="@+id/tv_verified"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{item.verified}"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/item_food_text_size_small"
                        tools:text="range" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toStartOf="@id/layout_timer"
                    app:layout_constraintStart_toEndOf="@id/layout_verified"
                    app:layout_constraintTop_toBottomOf="@id/rating">

                    <ImageView
                        android:id="@+id/imv_range"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginEnd="3dp"

                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_green_pin" />


                    <TextView
                        android:id="@+id/tv_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{item.range + ` km`}"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/item_food_text_size_small"
                        tools:text="Range" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="9dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/layout_range"
                    app:layout_constraintTop_toBottomOf="@id/rating">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imv_timer"
                        android:layout_width="17dp"
                        android:layout_height="17dp"

                        android:layout_marginEnd="3dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_timer" />

                    <TextView
                        android:id="@+id/tv_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{item.timer}"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/item_food_text_size_small"
                        tools:text="Range" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvLine"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray"
                    app:layout_constraintTop_toBottomOf="@id/layout_timer"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/tv_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/cera_pro_medim"
                    android:text="About"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@id/layout_verified" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="36dp"
                    android:fontFamily="@font/roboto_light"
                    android:lineHeight="20dp"
                    android:lineSpacingExtra="3dp"
                    android:text="@string/content"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_about" />


                <TextView
                    android:id="@+id/tvLine1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray"
                    app:layout_constraintTop_toBottomOf="@id/tvDescription"
                    android:layout_marginTop="15dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/white"
            app:layout_anchor="@id/nestedScrollView"
            app:layout_anchorGravity="bottom">

        </RelativeLayout>

        <ImageView
            android:id="@+id/ivMake"
            android:layout_width="80dp"
            android:layout_height="42dp"
            android:layout_marginStart="29dp"
            android:layout_marginBottom="36dp"
            android:background="@drawable/border_10_white_fill"
            android:elevation="2dp"
            android:padding="3dp"
            android:src="@drawable/expand"
            app:layout_anchor="@id/nestedScrollView"
            app:layout_anchorGravity="bottom|start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginBottom="100dp"
            android:drawableEnd="@drawable/ic_expand"
            android:drawablePadding="6dp"
            android:padding="3dp"
            android:src="@drawable/expand"
            android:text="Expand"
            android:textColor="@color/light_blue"
            android:textSize="16sp"
            app:layout_anchor="@id/nestedScrollView"
            app:layout_anchorGravity="bottom|start" />

        <TextView
            android:id="@+id/tvSuperPartner"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="36dp"
            android:background="@drawable/border_11_light_blue_fill"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:paddingHorizontal="18dp"
            android:text="Super Partner"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_anchor="@id/nestedScrollView"
            app:layout_anchorGravity="bottom|end" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/light_blue"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_like"
            app:fabSize="mini"
            android:tint="@color/white"
            app:layout_anchor="@id/nestedScrollView"
            app:layout_anchorGravity="top|right|end" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>